<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Change Password"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/poppins_medium"/>

    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_change"/>

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/et_old_password"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/et_new_password"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/btn_accept_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_confirm_password"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:textColor="@color/colorPrimary"
        android:text="Accept"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:clickable="true"/>

    <TextView
        android:id="@+id/btn_cancel_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_confirm_password"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/colorPrimary"
        android:text="Cancel"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/btn_accept_changepassword"
        android:background="@android:color/transparent"
        android:clickable="true"/>

</RelativeLayout>