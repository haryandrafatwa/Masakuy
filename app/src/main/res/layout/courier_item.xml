<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:id="@+id/layout_sayuran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tv_white_transp_radius"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_courier"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_courier"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_courier"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/tv_nama_courier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arif"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/tv_alamat_courier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_light"
                android:layout_below="@+id/tv_nama_courier"/>

            <TextView
                android:id="@+id/tv_nohp_courier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_light"
                android:layout_below="@+id/tv_alamat_courier"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>