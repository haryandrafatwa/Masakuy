<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cv_artikel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_artikel"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>

        <TextView
            android:id="@+id/tv_artikel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_artikel"
            android:text="Macam - Macam Pisau Dapur yang Bagus"
            android:textSize="12sp"
            android:padding="10dp"
            android:background="@drawable/bg_tv_white_transp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>