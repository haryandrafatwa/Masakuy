<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tv_nama_produk_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tv_quantity_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=""
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_alignParentEnd="true"/>

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_produk_cart">

            <TextView
                android:id="@+id/tv_harga_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_berat_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=""
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_harga_cart"/>

            <ImageButton
                android:id="@+id/ib_delete_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_delete"
                android:layout_marginLeft="48dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>