<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/layout_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_input_choose"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/recipe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silahkan Pilih salah satu menu yang ingin anda tambahkan"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_tambah_resep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tambah Resep"
            android:layout_below="@id/layout_input_title"
            android:background="@drawable/bg_btn_yellow"
            android:textColorHint="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:layout_marginTop="54dp"/>

        <Button
            android:id="@+id/btn_tambah_artikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tambah Artikel"
            android:layout_below="@id/btn_tambah_resep"
            android:background="@drawable/bg_btn_yellow"
            android:textColorHint="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:layout_marginTop="32dp"/>

        <Button
            android:id="@+id/btn_tambah_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tambah Produk Jualan"
            android:layout_below="@id/btn_tambah_artikel"
            android:background="@drawable/bg_btn_yellow"
            android:textColorHint="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>